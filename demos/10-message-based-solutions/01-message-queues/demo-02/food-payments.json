{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "defaultValue": "westeurope",
            "type": "String"
        },
        "environment_name": {
            "defaultValue": "",
            "type": "String"
        },
        "storageconnection": {
            "defaultValue": "",
            "type": "String"
        },
        "appInsights": {
            "defaultValue": "",
            "type": "String"
        },
        "sleepTime": {
            "defaultValue": "0",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
    {
        "name": "food-payments",
        "type": "Microsoft.App/containerApps",
        "apiVersion": "2022-03-01",
        "kind": "containerapp",
        "location": "[parameters('location')]",
        "properties": {
            "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', parameters('environment_name'))]",
            "configuration": {
                "activeRevisionsMode": "single",
                "secrets": [
                    {
                        "name": "storageconnection",
                        "value": "[parameters('storageconnection')]"
                    },
                    {
                        "name": "aikey",
                        "value": "[parameters('appInsights')]"
                    },
                    {
                        "name": "sleeptime",
                        "value": "[parameters('sleepTime')]"
                    }
                ]
            },
            "template": {
                "containers": [
                    {
                        "image": "arambazamba/food-payments",
                        "name": "foodpayments",
                        "env": [
                            {
                                "name": "PaymentConnectionString",
                                "secretRef": "storageconnection"
                            },
                            {
                                "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                                "secretRef": "aikey"
                            },
                            {
                                "name": "Sleep",
                                "secretRef": "sleeptime"
                            }
                        ]
                    }
                ],
                "scale": {
                    "minReplicas": 1,
                    "maxReplicas": 10,
                    "rules": [
                        {
                            "name": "queuescalerule",
                            "azureQueue": {
                                "queueName": "food-orders",
                                "queueLength": 10,
                                "auth": [
                                    {
                                        "secretRef": "storageconnection",
                                        "triggerParameter": "connection"
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        }
    }]
}