rnd=$RANDOM
grp=az204-m07-func-mi-$rnd
loc=westeurope
app=func-mi-$rnd
storage=func-mi$rnd
vault=foodvault-$rnd

az group create -n $grp -l $loc

az storage account  create -n $storage -g $grp 

url=$(az functionapp create -n $app -g $grp -s $storage --consumption-plan-location $loc --functions-version 4 -- --query defaultHostName -o tsv)

az functionapp identity assign -n $app -g $grp
az keyvault set-policy -n $vault --object-id $mi --secret-permissions list get
