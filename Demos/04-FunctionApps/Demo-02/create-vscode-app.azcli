rnd=$RANDOM
grp=az204-m04-vscode-$rnd
loc=westeurope
app=vscodeapp-$rnd
storage=vscodeapp$rnd

az group create -n $grp -l $loc

az storage account  create -n $storage -g $grp 

url=$(az functionapp create -n $app -g $grp -s $storage --consumption-plan-location $loc --runtime dotnet --functions-version 3 --query defaultHostName - tsv)

echo "Funtions app created: $app at $url"

# Stop here
# Deploy app
cd vscode-func
func azure functionapp publish $app

